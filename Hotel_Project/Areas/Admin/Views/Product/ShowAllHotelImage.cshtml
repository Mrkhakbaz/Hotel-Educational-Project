@model ShowHotelImagesVM
@{
    ViewData["Title"] = "ShowAllHotelImage";
}

<div class="mt-4">
    <div class="row align-items-center ">
        <div class="pb-3">
            <a asp-action="InsertImageToHotel" asp-route-id="@Model.Id" class="btn btn-outline-primary">افزودن تصویر</a>
        </div>
        @if (Model.HotelGalleries.Any())
        {
            @foreach (var item in Model.HotelGalleries)
            {
                <div class="col-lg-4 col-md-6 py-3 row justify-content-center">
                    <img class="img-thumbnail gallery-img" src="/asset/img/HotelImages/@item.ImageName" alt="">
                    <a class="btn btn-outline-danger w-50 mt-3" asp-action="RemoveHotelImage" asp-route-id="@item.Id">حذف</a>
                </div>
            }
        }else
        {
            <p class="fs-5 fw-600 text-center">در حال حاضر تصویری موجود نمیباشد</p>
        }
    </div>
</div>

