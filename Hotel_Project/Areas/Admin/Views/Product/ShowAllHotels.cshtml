
@model IEnumerable<Hotel>
@{
    ViewData["Title"] = "ShowAllHotels";
}

<div class="mx-3">
    <h2 class="py-3">لیست بنرها</h2>
    <div class="row">
        <div class="col-12 pb-3">
            <a asp-action="CreateHotel" class="btn btn-outline-primary">ایجاد هتل </a>
        </div>
        <div class="col-12">
            <div class="admin-table ">
                <table class="table">
                    <thead>
                        <tr class="table-secondary">
                            <th>عنوان</th>
                            <th>وضعیت</th>
                            <th>تعداد اتاق </th>
                            <th>مکمل ها</th>
                            <th>اتاق ها</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    @if (item.IsActive)
                                    {
                                        <td><button class="btn btn-sm btn-success">فعال</button></td>
                                    }
                                    else
                                    {
                                        <td><button class="btn btn-sm btn-danger">غیر فعال</button></td>
                                    }
                                    <td>@item.RoomCount</td>
                                    <td>
                                        <a asp-controller="Product" asp-action="ShowAllHotelImage" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-primary">تصویر</a>
                                        <a asp-controller="Product" asp-action="ShowAllRules" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-primary ms-2">قوانین</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Product" asp-action="ShowAllRooms" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-primary">اتاق ها</a>
                                    </td>

                                    <td>
                                        <a asp-controller="Product" asp-action="EditHotel" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-warning">ویرایش</a>
                                        <a asp-controller="Product" asp-action="RemoveHotel" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-danger ms-2">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="fs-5 fw-600">در حال حاضر هتلی ثبت نشده است لطفا از دکمه افزودن هتل استفاده نمایید</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

